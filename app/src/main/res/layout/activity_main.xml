<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.github.bccatest.R" />
        <import type="com.github.bccatest.viewmodel.AlbumViewModel" />
        <variable
            name="viewModel"
            type="com.github.bccatest.viewmodel.AlbumViewModel" />
        <variable
            name="isLiveData"
            type="int" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".ui.main.MainActivity">

        <TextView
            android:id="@+id/datasource"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|center_vertical"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:visibility="@{(isLiveData >= 0) ? View.VISIBLE : View.GONE }"
            android:text="@{(isLiveData >= 1) ? R.string.live : R.string.cached}"
            android:background="@{(isLiveData >= 1 ) ? @color/green : @color/orange}"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/filter"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:layout_below="@id/datasource"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/manual"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:text="insert"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@id/datasource"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/album_count"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="0"
            android:layout_below="@id/datasource"
            android:layout_alignParentRight="true"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_below="@id/filter"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/album_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

    </RelativeLayout>
</layout>
